{
  "name": "@williamp29/project-mcp-server",
  "version": "1.0.3",
  "description": "A ModelContextProtocol server to let agents discover your project, such as APIs (using OpenAPI) or other resources.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "project-mcp-server": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "typesVersions": {
    "*": {
      "api-explorer": [
        "./dist/api-explorer/index.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./api-explorer": {
      "types": "./dist/api-explorer/index.d.ts",
      "import": "./dist/api-explorer/index.js",
      "default": "./dist/api-explorer/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "openapi-types": "^12.1.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@types/node-fetch": "^2.6.13",
    "@types/swagger-parser": "^4.0.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
